<div class="mdl-card mdl-shadow--2dp mdl-color--primary mdl-color-text--blue-grey-50 drawer-profile">
  <div class="mdl-card__title user">
    <img src="data:image/jpg;base64," alt="" id="avatar-mini"/>
    <script>
    $(document).ready(function(){
      var img_mini =  "data:image/jpg;base64," + window.localStorage.getItem("avatar_mini");
      $('#avatar-mini').attr('src', img_mini);
    });
    </script>
    <span class="user-name">{{user.first_name}} {{user.last_name}}</span>
    <span class="user-mail">{{user.email}}</span>
    <button id="user-menu" class="mdl-button mdl-js-button mdl-button--icon">
