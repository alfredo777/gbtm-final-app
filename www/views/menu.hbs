</ul>
<nav class="mdl-navigation">
  <a class="mdl-navigation__link animsition-link" href="#" onclick="calendar()"><i class="material-icons">today</i><span>Calendar</span></a>
  <a class="mdl-navigation__link animsition-link" href="#" onclick="gethome()"><i class="material-icons">account_circle</i><span>Profile</span></a>
  <a class="mdl-navigation__link animsition-link" href="#" onclick="contact()"><i class="material-icons">call</i><span>Contact Us</span></a>
  <a class="mdl-navigation__link animsition-link" href="#" onclick="exit()"><i class="material-icons">cancel
    </i><span>Log Out</span></a>
  </nav>

  <script>
  var datax = window.localStorage.getItem("userAccess");
  var userx = JSON.parse(datax);
  function gethome(){
  loadView(userx,'profile','load-in-body');
  $('.mdl-layout__drawer').removeClass('is-visible');
  }
  function calendar(){

  loadView(userx,'calendar','load-in-body');
    $('.mdl-layout__drawer').removeClass('is-visible');

  }

  function contact(){

  loadView(userx,'contact','load-in-body');
    $('.mdl-layout__drawer').removeClass('is-visible');

  }



  function edit(){

  loadView(userx,'edit_profile','load-in-body');
    $('.mdl-layout__drawer').removeClass('is-visible');

  }

  function exit(){
    window.localStorage.setItem("loggedIn",0);
    location.reload();
  }
  </script>