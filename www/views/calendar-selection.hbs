<h4 style="margin-top: -50px; text-align: left; width: 100%; height: 20px; padding: 20px ; background: #0097A7; color:#fff; font-size:25px;">Clients</h4>
{{#if accounts}}
	<ul class="accounts"> 
	 {{#each accounts}}
	   <li id="account-{{@index}}" data-email="{{email}}" class="account"><i class="fa fa-industry" aria-hidden="true" style="opacity: 0.2; margin-right: 7px;"></i> {{name}} </li>
	 {{/each}}
	</ul>
  {{else}}
  <center>No accounts found</center>  
{{/if}}

<script>
   $('.account').click(function(){
   	 var id = $(this).attr('id');
   	 var email = $('#'+id).data('email');
   	 var url = 'http://btmconsulting-api.herokuapp.com/agenda_usuario_json?Mail='+email;
     console.log(url);
     $.ajax({
              url: url,
              type: 'get',
              dataType: 'json',
              success: function (data) {
                dataz = JSON.stringify(data);
                window.localStorage.setItem("cites", dataz);
                var cites = window.localStorage.getItem("cites");
                loadView(JSON.parse(cites),'calendar-single-view','append-calendar');
              }
      });
   });
</script>

<style>.back { display: none; }</style>